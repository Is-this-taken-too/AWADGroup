<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js"></script>
<script src="http://code.highcharts.com/highcharts.js"></script>
<body style="background-color:#CCFFFF" >
<div id="body" align="center">

<%= image_tag("UNDPLogo.png") %> <h1>Donor Country Statistics</h1>

<p>Total donated by all donor countries: <%=@donorsTotal %></p>
<p>Total donated regularly by all donor countries: <%=@donorsRegularTotal %></p>
<p>Total donated as a one off by all donor countries: <%=@donorsOtherTotal %></p>

<p><%= link_to "Home", "/main" %>&nbsp;<%= link_to "Projects Search", "/Project" %></p>


<div id="container" style="width:800px; height:400px;"></div>
<script>
$(function () {
    $('#container').highcharts({
        chart: {
            plotBackgroundColor: null,
            plotBorderWidth: null,
            plotShadow: false
        },
        title: {
            text: 'Regular donations made by contributing countries, 2013'
        },
        tooltip: {
    	    pointFormat: '{series.name}: <b>{point.percentage:.1f}%</b>'
        },
        plotOptions: {
            pie: {
                allowPointSelect: true,
                cursor: 'pointer',
                dataLabels: {
                    enabled: true,
                    color: '#000000',
                    connectorColor: '#000000',
                    format: '<b>{point.name}</b>: {point.percentage:.1f} %'
                }
            }
        },
        series: [{
            type: 'pie',
            name: 'Donation percentage of total:',
            data: [
	    <% @donors.each do |value| %>
		['<%= value.DONOR %>', <%= ((value.REGULAR*100)/@donorsRegularTotal2) %>],
		<% end %>
            ]
        }]
    });
});
</script><br/>
<div id="container4" style="width:800px; height:400px;"></div>
<script>
$(function () {
        $('#container4').highcharts({
            chart: {
                type: 'column',
                
            },
            title: {
                text: 'Regular donations made by contributing countries, 2013'
            },
            xAxis: {
                categories: [
		<% @donors.each do |value| %>
                    '<%= value.DONOR %>',
		    <% end %>
                ],
                labels: {
                    rotation: -45,
                    align: 'right',
                    style: {
                        fontSize: '13px',
                        fontFamily: 'Verdana, sans-serif'
                    }
                }
            },
            yAxis: {
                min: 0,
                title: {
                    text: 'Donation amount ($million)'
                }
            },
            legend: {
                enabled: false
            },
            tooltip: {
                pointFormat: 'Donation Amount: <b>${point.y:.1f} million </b>',
            },
            series: [{
                name: 'Donation Amount ($)',
                data: [<% @donors.each do |value| %><%= value.REGULAR/1000000 %>, <% end %>],
		dataLabels: {
                    enabled: false,
                    rotation: -90,
                    color: '#FFFFFF',
                    align: 'right',
                    x: 4,
                    y: 10,
                    style: {
                        fontSize: '13px',
                        fontFamily: 'Verdana, sans-serif',
                        textShadow: '0 0 3px black'
                    }
                }
            }]
        });
    });
</script><br />
